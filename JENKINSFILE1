pipeline {
    agent any
	tools {
    	jdk 'jdk8'
}
	stages {
            stage('git') {
              steps {
                echo 'scm'
		git branch: 'main', url: 'https://github.com/jyostnabhavani/jyomindcircuit-facebook.git'
            }
        }
	stage('Build') {
            parallel {
                stage('Build Backend') {
                    steps {
                        // Your backend build commands
                    }
                }
                stage('Build Frontend') {
                    steps {
                        // Your frontend build commands
                    }
		}		  
	}




stage(' SONAR ') {
            steps {
                echo 'SCANNING PROJECT'
		sh 'mvn sonar:sonar'
  		
            }
        }
	stage('build') {
            steps {
                echo 'generating artifact using maven build tool'
		sh 'mvn clean install'
  		 }
        }
        stage('nexus artifactory') {
            steps {
                echo 'publish to nexus'
		sh 'mvn deploy'
}
     }
	stage('deploy to tomcat') {
            steps {
                echo 'tomcat deploy'
 deploy adapters: [tomcat9(credentialsId: 'tomcat', path: '', url: 'http://34.229.184.18:8091/')], contextPath: 'mc-app-facebook', war: '**/*.war'
		}
       }
     }
}
